<root>
  <params name="slider-type-block-animation" label="Animation settings">
    <param type="group" label="Ken Burns effect">
      <param type="postbackgroundanimation" name="kenburns-animation" label="Animation(s)" default="50|*|50|*|"/>
      <param type="list" name="kenburns-animation-speed" label="Speed" default="default" translateable="1">
        <option value="default">Default</option>
        <option value="superSlow">Super slow</option>
        <option value="slow">Slow</option>
        <option value="normal">Normal</option>
        <option value="fast">Fast</option>
        <option value="superFast">Super fast</option>
      </param>
    </param>
  </params>
</root>