<root>
    <params name="easydiscussitems" label="Filter">
        <param type="group" label="Source">
            <param name="easydiscusscategories" label="Categories" type="easydiscusscategories" default="0" multiple="1"
                   size="10"/>
            <param name="easydiscusstags" label="Tags" type="easydiscusstags" default="0" multiple="1"
                   size="10"/>
        </param>
        <param type="group" label="Limit" class="n2-expert">
            <param name="easydiscussuserid" label="User id" type="text" default=""/>
            <param name="easydiscussfeatured" label="Featured" type="filter" default="0"/>
            <param name="easydiscussresolved" label="Resolved" type="filter" default="0"/>
            <param name="easydiscussmain" label="Only main discussions" type="onoff" default="1"/>
        </param>
    </params>

    <params name="order" label="Order by">
        <param name="easydiscussorder" type="mixed" label="Order" default="created|*|desc">
            <param type="list" label="Field" translateable="1">
                <option value="">None</option>
                <option value="title">Title</option>
                <option value="ordering">Ordering</option>
                <option value="created">Creation time</option>
                <option value="modified">Modification time</option>
            </param>
            <param type="radio" label="order">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
            </param>
        </param>
    </params>
</root>