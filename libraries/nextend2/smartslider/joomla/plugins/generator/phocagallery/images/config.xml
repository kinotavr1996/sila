<root>
    <params name="phocagalleryimages" label="Filter">
        <param type="group" label="Source">
            <param name="phocagallerysourcecategories" label="Categories" type="phocagallerycategories"
                   default="0"
                   multiple="1" size="10"/>
            <param name="phocagallerysourcetags" label="Tags" type="phocagallerytags" default="0"
                   multiple="1" size="10"/>
        </param>
        <param type="group" label="Limit" class="n2-expert">
            <param name="phocagallerysourcelanguage" label="Language filter" type="text" default="*"/>
        </param>
    </params>
    <params name="order" label="Order by">
        <param name="phocagalleryorder" type="mixed" label="Order" default="con.date|*|desc">
            <param type="list" label="Field" translateable="1">
                <option value="">None</option>
                <option value="con.title">Title</option>
                <option value="cat_title">Category title</option>
                <option value="con.ordering">Ordering</option>
                <option value="con.hits">Hits</option>
                <option value="con.date">Date</option>
            </param>
            <param type="radio" label="order">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
            </param>
        </param>
    </params>
</root>